<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
							
	<!-- bean의 class속성은 객체화가능한 클래스를 작성한다. interface는 BeanInstantiationException을 유발한다. -->		
	<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<!-- value값은 일단 String이지만, setter의 파라미터 타입에 맞게 class객체등으로 형변환되어 처리된다. -->
		<property name="driverClass" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:xe" />
		<property name="username" value="toby" />
		<property name="password" value="toby" />
	</bean>

	<bean id="deleteAllUserDao" class="springbook.user.dao.template.method.pattern.DeleteAllUserDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
	<bean id="countUserDao" class="springbook.user.dao.template.method.pattern.CountUserDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
	<bean id="addUserDao" class="springbook.user.dao.template.method.pattern.AddUserDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
</beans>
